<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ProductFragment"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_weight="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="50">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="100">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="18dp">
                </TextView>
                <EditText
                    android:id="@+id/edt_usr_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre">
                </EditText>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textSize="18dp">
                </TextView>
                <EditText
                    android:id="@+id/edt_user_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo">

                </EditText>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuenta en tienda"
                    android:textSize="18dp">
                </TextView>
                <EditText
                    android:id="@+id/edt_usr_cuenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cuenta">

                </EditText>
                <Button
                    android:layout_margin="20dp"
                    android:id="@+id/btn_usr_guardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button1"
                    android:text="Guardar Usuario"></Button>
                <Button
                    android:id="@+id/btn_usr_dele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@null"
                    android:background="@drawable/custombutton3"
                    android:text="Eliminar Usuario"
                    android:layout_marginHorizontal="20dp"></Button>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
  </LinearLayout>